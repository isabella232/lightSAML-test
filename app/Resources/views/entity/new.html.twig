{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 col-xs-12">
            <h1>Add new entity</h1>

            {{ form_start(form) }}
            <div class="alert alert-warning" role="alert">
                Paste the url, or select and upload entity descriptor XML file of the entity you wish to register.
            </div>

            {{ form_widget(form) }}
            <div class="clearfix"></div>
            <div class="form-group mt-40">
                <button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i> Add</button>
                <a href="{{ path('homepage') }}" class="btn btn-default pull-right">Cancel</a>
            </div>

            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}

