{% extends "tools/_tools_base.html.twig" %}

{% block content %}
    <h1>Self Signed Certificates</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-cogs" aria-hidden="true"></i> Calculate</button>
    {{ form_end(form) }}

    <div class="clearfix mt-20"></div>

    <h2>Info</h2>
    <div class="form-group">
        <table class="table">
            {% for name, value in info %}
                <tr>
                    <td>{{ name }}</td>
                    <td>
                        {% if value is iterable %}
                            {% for k, v in value %}
                                {{ k }}: {{ v }}<br/>
                            {% endfor %}
                        {% else %}
                            {{ value }}
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}